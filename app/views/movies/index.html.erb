<% if current_user %>
  <h1>  Welcome <%= current_user.name %>! </h1>

  <%= button_to "Find Top Rated Movies", "/movies", method: :get %>

  <h3>OR</h3>

  <%= form_tag("/movies", method: :get) do  %>
    <%= label_tag(:Search_By_Movie_Title) %>
    <%= text_field_tag(:Search_By_Movie_Title) %>

    <%= submit_tag("Find Movies") %>
  <% end %>

  <% @movies.each_with_index do |movie, index| %>
    <ul class="movie-<%= index %>">
      <li class="title"><%= link_to "#{movie.title}", "/movies/#{movie.id}" %> Vote Average: <%= movie.vote_average %>
    </ul>
  <% end %>

<% else %>
  <h4> Not a member? <%= link_to 'Register', '/registration', method: :get %> to view this page </h4>
  <h4> Already a member? <%= link_to 'Log In', '/', method: :get %> to view this page </h4>
<% end %>
