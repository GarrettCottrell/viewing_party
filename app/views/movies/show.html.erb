<h1>Welcome <%= current_user.name %>!</h1>

<h1><%= @movie_details[:original_title] %></h1> <%= button_to 'Create Viewing Party for Movie', '/viewing_party/new', method: :get %>

<h3>Vote Average: <%= @movie_details[:vote_average] %></h3>

<h3>Genre(s):
  <%= @genres %>
</h3>

<h3>Summary: <%= @movie_details[:overview] %></h3>

<h3>Runtime: <%= @movie_details[:runtime] / 60 %> hr <%= @movie_details[:runtime] % 60 %> min</h3>

<h3>Cast:
<% @credits.each_with_index do |credit, index| %>
    <ul class="cast-<%= index %>">
      <li class="actor"><%= credit[:name] %> / <%= credit[:character] %>
    </ul>
  <% end %>

<h3><%= @reviews[:total_results] %> Reviews:
<% @reviews[:results].each_with_index do |review, index| %>
    <ul class="review-result-<%= index %>">
      <li class="review-content"><%= review[:content] %>
    </ul>
  <% end %>
